{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2018"],
    "target": "es2018",
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": false,
    "sourceMap": true,
    "noUnusedLocals": false,
    "strictFunctionTypes": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": [
      "src/**/*"
  ]
}